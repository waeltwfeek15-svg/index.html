    <script>
        // ===========================================
        // منطق الكتالوج الذكي
        // ===========================================
        const brands = [
            'شارب (Sharp)', 
            'كاريير (Carrier)', 
            'إل جي (LG)', 
            'ميديا (Midea)', 
            'هاير (Haier)', 
            'تورنيدو (Tornado)', 
            'يونيون إير (Unionaire)', 
            'فريش (Fresh)'
        ];

        // مصفوفة لتخزين موديلات التكييفات لكل ماركة
        const capacities = ['1.5 حصان', '2.25 حصان', '3 حصان'];
        const types = [
            { name: 'بارد فقط (سبليت)', icon: 'fa-snowflake', color: 'text-blue-500' },
            { name: 'انفرتر (موفر للطاقة)', icon: 'fa-leaf', color: 'text-green-500' }
        ];

        let currentBrand = brands[0]; // الماركة الافتراضية

        // 1. إنشاء أزرار الماركات
        const tabsContainer = document.getElementById('brandTabs');
        const gridContainer = document.getElementById('productsGrid');

        function renderTabs() {
            tabsContainer.innerHTML = '';
            brands.forEach(brand => {
                const btn = document.createElement('div');
                btn.className = `tab-btn ${brand === currentBrand ? 'active' : ''}`;
                btn.innerText = brand.split('(')[0]; // عرض الاسم العربي فقط
                btn.onclick = () => {
                    currentBrand = brand;
                    renderTabs(); // تحديث الشكل النشط
                    renderProducts(); // تحديث المنتجات
                };
                tabsContainer.appendChild(btn);
            });
        }

        // 2. إنشاء كروت المنتجات
        function renderProducts() {
            gridContainer.innerHTML = '';
            // إنشاء الـ 6 كروت (3 قدرات * 2 نوع)
            capacities.forEach(cap => {
                types.forEach(type => {
                    const card = document.createElement('div');
                    card.className = 'product-card p-6 flex flex-col justify-between';
                    
                    const productName = `تكييف ${currentBrand.split('(')[0]} - ${cap}`;
                    const productDesc = type.name;
                    
                    card.innerHTML = `
                        <div>
                            <div class="flex justify-between items-start mb-4">
                                <div class="bg-gray-100 p-3 rounded-full">
                                    <i class="fa-solid ${type.icon} ${type.color} text-xl"></i>
                                </div>
                                <span class="bg-brand-50 text-brand-700 text-xs font-bold px-2 py-1 rounded-lg border border-brand-100">${cap}</span>
                            </div>
                            <h3 class="text-xl font-bold text-gray-900 mb-1">${productName}</h3>
                            <p class="text-gray-500 text-sm mb-4 font-bold ${type.color}">${productDesc}</p>
                        </div>
                        <button onclick="askPrice('${productName} ${productDesc}')" class="w-full bg-white border-2 border-brand-500 text-brand-600 font-bold py-2 rounded-lg hover:bg-brand-600 hover:text-white transition flex items-center justify-center gap-2">
                            <i class="fa-brands fa-whatsapp"></i> اسأل عن السعر
                        </button>
                    `;
